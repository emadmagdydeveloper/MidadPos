<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llItemsLand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"


        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbarItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:text="@string/items"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="24dp"
                                android:paddingBottom="24dp"
                                >

                                <ImageView
                                    android:id="@+id/iconItem"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_items"
                                    app:tint="@color/grey4" />

                                <androidx.legacy.widget.Space
                                    android:layout_width="36dp"
                                    android:layout_height="0dp" />

                                <TextView
                                    android:id="@+id/tvItem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/items"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <androidx.legacy.widget.Space
                                android:layout_width="76dp"
                                android:layout_height="0dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey3" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/categories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="24dp"
                                android:paddingBottom="24dp"
                                >

                                <ImageView
                                    android:id="@+id/iconCategory"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_categories"
                                    app:tint="@color/grey4" />

                                <androidx.legacy.widget.Space
                                    android:layout_width="36dp"
                                    android:layout_height="0dp" />

                                <TextView
                                    android:id="@+id/tvCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/categories"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <androidx.legacy.widget.Space
                                android:layout_width="76dp"
                                android:layout_height="0dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey3" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/discounts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="24dp"
                                android:paddingBottom="24dp"

                                >

                                <ImageView
                                    android:id="@+id/iconDiscount"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_discount"
                                    app:tint="@color/grey4" />

                                <androidx.legacy.widget.Space
                                    android:layout_width="36dp"
                                    android:layout_height="0dp" />

                                <TextView
                                    android:id="@+id/tvDiscount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/discounts"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <androidx.legacy.widget.Space
                                android:layout_width="76dp"
                                android:layout_height="0dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey3" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <FrameLayout
                android:id="@+id/flItemDetailsLand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                >
                <include
                    android:id="@+id/itemsDetailsLayout"
                    layout="@layout/items_layout" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flCategoryDetailsLand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                >
                <include
                    android:id="@+id/categoryDetailsLayout"
                    layout="@layout/category_layout" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flDiscountsDetailsLand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                >
                <include
                    android:id="@+id/discountDetailsLayout"
                    layout="@layout/discounts_layout" />

            </FrameLayout>

        </FrameLayout>
    </LinearLayout>


</layout>
