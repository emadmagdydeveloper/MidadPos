                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                >
                <include
                    android:id="@+id/openShiftLayout"
                    layout="@layout/open_shift_layout"
                    />

            </FrameLayout>
            <FrameLayout
