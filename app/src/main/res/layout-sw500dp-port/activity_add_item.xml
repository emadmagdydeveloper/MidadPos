<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>

        <variable
            name="lang"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey1"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="3dp"
                        android:rotation='@{lang.equals("ar")?180:0}'
                        android:src="@drawable/ic_back_arrow"
                        app:tint="@color/white" />

                    <androidx.legacy.widget.Space
                        android:layout_width="24dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_item"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="@string/save"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="2dp"
                    app:contentPadding="16dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true"
                            app:hintAnimationEnabled="true"

                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:hint="@string/name"
                                android:lines="1"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/grey4"
                            android:textSize="13sp"
                            android:text="@string/category"
                            />

                        <LinearLayout
                            android:id="@+id/llCategory"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/tvCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:gravity="center_vertical"

                                />
                            <androidx.legacy.widget.Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_drop_down"
                                android:padding="4dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                app:tint="@color/grey4"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey3"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:text="@string/sold_by"
                                />
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="48dp"
                                android:layout_marginEnd="48dp"
                                >
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/each"
                                    />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/weight"
                                    />
                            </RadioGroup>
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/hintCost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:textColor="@color/grey4"
                                android:textSize="13sp"
                                android:text="@string/cost"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="@id/tiCost"

                                />
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tiPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:hintEnabled="true"
                                app:hintAnimationEnabled="true"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/space"
                                app:layout_constraintTop_toTopOf="@id/tiCost"
                                app:layout_constraintBottom_toBottomOf="@id/tiCost"

                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:hint="@string/price"
                                    android:lines="1"
                                    android:textSize="18sp"
                                    android:inputType="numberDecimal"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.legacy.widget.Space
                                android:id="@+id/space"
                                android:layout_width="48dp"
                                android:layout_height="0dp"
                                app:layout_constraintStart_toEndOf="@id/tiPrice"
                                app:layout_constraintEnd_toStartOf="@id/tiCost"
                                app:layout_constraintTop_toTopOf="parent"

                                />
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tiCost"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:hintEnabled="false"
                                app:layout_constraintStart_toEndOf="@id/space"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/hintCost"
                                app:layout_constraintBottom_toBottomOf="@id/tiPrice"

                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:hint="0.00"
                                    android:lines="1"
                                    android:textSize="18sp"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/black"
                                    />


                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/grey4"
                                android:textSize="13sp"
                                android:text="@string/leave_blank"
                                app:layout_constraintTop_toBottomOf="@id/tiPrice"
                                app:layout_constraintStart_toStartOf="@id/tiPrice"
                                app:layout_constraintEnd_toEndOf="@id/tiPrice"
                                android:gravity="start"
                                android:textAlignment="viewStart"


                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            >
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                app:hintEnabled="true"
                                app:hintAnimationEnabled="true"

                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:hint="@string/sku"
                                    android:lines="1"
                                    android:textSize="15sp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.legacy.widget.Space
                                android:layout_width="48dp"
                                android:layout_height="0dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                app:hintEnabled="true"
                                app:hintAnimationEnabled="true"


                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:hint="@string/barcode"
                                    android:lines="1"
                                    android:textSize="15sp"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:drawableEnd="@drawable/ic_scan_barcode"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="16dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:text="@string/inventory"
                            />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="@string/track_stock"
                            android:checked="false"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="16dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:text="@string/representation_pos"
                            />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="@string/color_shape"
                                />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="@string/image"
                                android:layout_marginStart="48dp"
                                android:layout_marginEnd="48dp"
                                />
                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/llColorShape"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                >
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card1"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card2"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat1"
                                    >
                                    <ImageView
                                        android:id="@+id/check1"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        />
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card2"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toEndOf="@id/card1"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card3"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat2"
                                    >
                                    <ImageView
                                        android:id="@+id/check2"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        android:visibility="gone"

                                        />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card3"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toEndOf="@id/card2"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card4"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat3"
                                    >
                                    <ImageView
                                        android:id="@+id/check3"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        android:visibility="gone"
                                        />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card4"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toEndOf="@id/card3"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card5"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat4"
                                    >
                                    <ImageView
                                        android:id="@+id/check4"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        android:visibility="gone"

                                        />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card5"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toEndOf="@id/card4"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card6"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat5"
                                    >
                                    <ImageView
                                        android:id="@+id/check5"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        android:visibility="gone"
                                        />
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card6"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toEndOf="@id/card5"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card7"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat6"
                                    >
                                    <ImageView
                                        android:id="@+id/check6"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        android:visibility="gone"

                                        />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card7"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toEndOf="@id/card6"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/card8"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat7"
                                    >
                                    <ImageView
                                        android:id="@+id/check7"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        android:visibility="gone"
                                        />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card8"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toEndOf="@id/card7"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="1dp"
                                    app:cardElevation="1dp"
                                    app:cardBackgroundColor="@color/cat8"
                                    >
                                    <ImageView
                                        android:id="@+id/check8"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/white"
                                        android:visibility="gone"

                                        />
                                </androidx.cardview.widget.CardView>


                                <FrameLayout
                                    android:id="@+id/shape1"

                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toStartOf="@id/card1"
                                    app:layout_constraintTop_toBottomOf="@id/card1"
                                    app:layout_constraintEnd_toEndOf="@id/card1"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginTop="24dp"
                                    >
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_stroke_square"
                                        app:tint="@color/grey4"

                                        />

                                    <ImageView
                                        android:id="@+id/shapeCheck1"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_correct2"
                                        app:tint="@color/grey4"
                                        />

                                </FrameLayout>

                                <FrameLayout
                                    android:id="@+id/shape2"

                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintStart_toStartOf="@id/card2"
                                    app:layout_constraintTop_toBottomOf="@id/card2"
                                    app:layout_constraintEnd_toEndOf="@id/card2"
                                    app:layout_constraintDimensionRatio="1"
                                    android:layout_marginTop="24dp"
                                    >
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_stroke_circle"
                                        app:tint="@color/grey4"

                                        />

                                    <ImageView
